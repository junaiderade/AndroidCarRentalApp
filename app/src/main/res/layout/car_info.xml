<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/buttonReserveCar2"
        android:layout_width="wrap_content"
        android:layout_height="27dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="333dp"
        android:layout_marginTop="28dp"
        android:layout_toRightOf="@id/textPrice"
        android:background="@color/system_transparent"
        android:text="Unreserve"
        android:textColor="@color/colorPrimarDark"
        android:visibility="visible"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/textCarName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="122dp"
        android:layout_marginTop="9dp"
        android:text="Car Name"
        android:textColor="@color/system_blue"
        android:textSize="@dimen/text_size_large" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="68dp"
        android:layout_height="69dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="197dp"
        android:layout_marginTop="3dp"
        android:layout_marginRight="-121dp"
        app:srcCompat="@drawable/q8" />

    <TextView
        android:id="@+id/textCarType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textAddy"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:text="Car Type" />

    <TextView
        android:id="@+id/textAddy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textCarName"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:text="MPG" />


    <TextView
        android:id="@+id/textPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="272dp"
        android:layout_marginTop="26dp"
        android:layout_marginRight="-87dp"
        android:text="$Price"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/text_size_medium" />

    <Button
        android:id="@+id/buttonReserveCar"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="334dp"
        android:layout_marginTop="0dp"
        android:layout_toRightOf="@id/textPrice"
        android:background="@color/system_transparent"
        android:text="Reserve"
        android:textColor="@color/colorPrimarDark"
        android:visibility="visible"
        tools:visibility="visible" />

</RelativeLayout>